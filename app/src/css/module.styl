@import "./base/_vars"

.Module
  position: relative
  color: $black
  font-size: 14px
  font-family: 'Lato', 'Helvetica', 'OpenSans'

  *
    -webkit-font-smoothing: antialiased
    -moz-osx-font-smoothing: grayscale
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0) !important

  &::focus
    outline:none !important


  button
    display: table-cell
    width: 100%
    height: 100%
    vertical-align: middle
    font-size: 14px
    background: none
    transition: .1s transform
    outline: none
    color: inherit

    &:hover
      cursor: pointer
      font-weight: bold
      transform: scale(1.1)

    &:active
      cursor: pointer
      font-weight: bold
      transform: scale(1)


